# Commands
alias ll="ls -laph"
alias l="ls -lph"
alias cd="cd -P"

# Files
alias aliases="vim ~/.aliases"
alias zshrc="vim ~/.zshrc"
alias vimrc="vim ~/.vimrc"

# Colorful greps
alias grep="grep --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"
alias pcregrep="egrep --color=auto"

# jsparrow alias
alias jsp-refactor="mvn eu.jsparrow:jsparrow-maven-plugin:1.1.0-SNAPSHOT:refactor"
alias jsp-refactor-debug="mvnDebug eu.jsparrow:jsparrow-maven-plugin:1.1.0-SNAPSHOT:refactor"

# colored l and ls
alias ls="ls --color=tty"
alias l="ls -lpha"
